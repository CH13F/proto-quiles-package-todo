{
  "$schema": "http://quiles.io/v0.0.1/resource/schema#",
  "url": "resources/todo",
  "name": "todo",
  "schema": { "$ref": "todo.schema.json" },
  "version": "v0.1.0",
  "routines": [
    "routines/new-todo/",
    "routines/set-todo/",
    "routines/get-todo/",
    "routines/remove-todo/",
    "routines/purge-todo/"
  ],
  "messages": {
    "POST": {
      "request": { "routine": "new", "action": "request" },
      "response": { "event": "added" }
    },
    "GET": {
      "request": { "routine": "get" },
      "response": { "resource": true }
    },
    "PATCH": {
      "request": { "routine": "set" },
      "response": { "event": "changed" }
    },
    "DELETE": {
      "request": { "routine": "remove" },
      "response": { "event": "removed" }
    }
  }
}